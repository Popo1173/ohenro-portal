{
  // ========================================
  // 保存時に自動フォーマットを実行
  // ========================================
  "editor.formatOnSave": true,

  // ========================================
  // .njk を HTML として扱う
  // ========================================
  "files.associations": {
    "*.njk": "html"
  },

  // ========================================
  // デフォルトは Prettier
  // ========================================
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ----------------------------------------
  // 各言語ごとのフォーマッター設定
  // ----------------------------------------

  // HTML（.njk含む）は Prettier
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // SCSS も Prettierで整形（← 重要）
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // CSS も Prettier
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ----------------------------------------
  // 保存時に lint の自動修正を実行
  // ----------------------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },

  // ESLint は JS のみ対象
  "eslint.validate": ["javascript"],

  // stylelint は CSS / SCSS を対象（lintだけ）
  "stylelint.validate": ["css", "scss"],

  // コードスペルチェック除外項目
  "cSpell.userWords": ["true"]
}
